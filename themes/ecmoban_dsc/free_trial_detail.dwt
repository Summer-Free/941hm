        <script>
        	$(function() {

				//原生城市-无联动
				var select = $('.city-picker-select').cityPicker({
					dataJson: cityData,
					renderMode: false,
					linkage: false
				});
				//设置城市
				select.setCityVal([{
					'id': '330000',
					'name': '山西省'
				}, {
					'id': '330100',
					'name': '杭州市'
				}, {
					'id': '330108',
					'name': '滨江区'
				}]);
                $("#send").click(function(e){
                    e.preventDefault();
                    var name=$("#name").val();
                    var phone=$("#phone").val();
                    var province=$(".city-picker-select .province").find("option:selected").data("title");//获取省的ID
                    var city=$(".city-picker-select .city").find("option:selected").data("title");//获取市的ID 
                    var district=$(".city-picker-select .district").find("option:selected").data("title");//获取区(县)的ID
                    var address=$("#detail-address").val();
                    reg = /^[\u4e00-\u9fa5]{2,4}$/i;
                    if (!reg.test(name))
                            {
                                alert("请输入2-4个汉字！"); 
                                return false;
                            }
                    else if(!(/^1[34578]\d{9}$/.test(phone)))
                    {
                        alert("手机号码有误，请重填");  
                        return false;
                    }
                    else if(province)
                    {
                        alert("请选择省");  
                        return false;
                    }
                    else if(city)
                    {
                        alert("请选择市");  
                        return false;
                    }
                    else if(district)
                    {
                        alert("请选择区(县)");  
                        return false;
                    }
                    //通过以上验证，将数据传入PHP文件
                    
                })
        	});
        </script>
