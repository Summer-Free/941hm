            $("img.lazy").lazyload({
            	placeholder: "themes/ecmoban_dsc/iamges/20170517/ajax-loader.gif",
                effect : "fadeIn",
                threshold : 1000
            });

        	$(function() {

				//启用三级联动插件
				var select = $('.city-picker-select').cityPicker({
					dataJson: cityData,
					renderMode: false,
					linkage: false
				});

                //默认城市配置参数
                var data = [
                    {
                        'id': '330000',
                        'name': '浙江省'  
                    },
                    {
                        'id': '330100',
                        'name': '杭州市'  
                    },
                    {
                        'id': '330108',
                        'name': '滨江区' 
                    }
                ];

				//启用默认城市
				select.setCityVal(data);

				//提交表单相关函数
                function submitForm() {
                        
                    var province = data[0].name, //获取省的ID
                        city = data[1].name,//获取市的ID
                        district = data[2].name;//获取区(县)的ID

                        $(".city-picker-select .province").on("change",function() {
                            province = $(this).find("option:selected").data("title");
                        });

                        $(".city-picker-select .city").on("change",function() {
                            city = $(this).find("option:selected").data("title");
                        });

                        $(".city-picker-select .district").on("change",function() {
                            district = $(this).find("option:selected").data("title");
                        });
                    $("#send").click(function(e)
                    {
                        e.preventDefault();
                        var name=$("#bm_name").val();
                            phone=$("#bm_phone").val();
                            address=$("#detail-address").val();
                            reg = /^[\u4e00-\u9fa5]{2,4}$/i;
                            if (!reg.test(name))
                            {
                                alert("请输入2-4个汉字！"); 
                                return false;
                            }
                            else if(!(/^1[34578]\d{9}$/.test(phone)))
                            {
                                alert("手机号码有误，请重填");  
                                return false;
                            }
                            else if(!province)
                            {
                                alert("请选择省");  
                                return false;
                            }
                            else if(!city)
                            {
                                alert("请选择市");  
                                return false;
                            }
                            else if(!district)
                            {
                                alert("请选择区(县)");  
                                return false;
                            };
                            $('#form_info').submit();
                    });
                };

                submitForm();

        	});
        </script>
