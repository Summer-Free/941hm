<script>
	function check_confirm(){
		var r=confirm('您确定要删除这条数据么？');
		if(r==true){
			var id=$("#this_messge_id").val();
			$.ajax({
                type:"GET",
                url:"del.php?id="+id,
                dataType:"TEXT",
                success:function(data)
